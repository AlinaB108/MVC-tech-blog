<div class="row mb-4 text-light">
  <div class="col-md-12">
    <h2>
    <a href="/post/{{id}}">{{title}}</a>
    </h2>
    <p>{{content}}</p>
    <p>Written by {{user.name}} on {{format_date date_created}}</p>
{{#if logged_in}}
<div class="form-group">
  <input type="hidden" name="post-id" value="{{id}}" />
  <label for="addComment">Comment:</label>
  <textarea name="commentText" class="form-control commentText" rows="2"></textarea>
</div>
<button type="submit" id="addComment" class="btn btn-success">Submit</button>
{{/if}}
<h3>
  Comments:
</h3>
  {{#each comments as |comment|}}
    <div class="comment">
      <p>{{comment.comment}}</p>
      <p>Written by: {{comment.user.name}}</p>
    </div>
    {{/each}}
  </div>

{{#if logged_in}}
<script src="/js/comment.js"></script>
{{/if}}