<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post!</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="project-desc">Content:</label>
        <input class="form-input" type="text" id="post-desc" name="project-desc" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

  {{#if posts.length}}
    {{#each posts as |post|}}
      <h3>Update an Existing Post:</h3>

      <form class="form updating-post-form">
        <input type="hidden" name="post-id" id="post-id" value="{{post.id}}" />
        <div class="form-group">
          <label for="update-title">Post Title:</label>
          <input class="form-input" type="text" id="update-title" name="update-title" value="{{post.title}}" />
        </div>
        <div class="form-group">
          <label for="update-content">Content:</label>
          <textarea class="form-input" id="update-content" name="update-content">{{post.content}}</textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-warning updatePostButton" data-id="{{post.id}}">Update</button>
        </div>
      </form>
    {{/each}}
  {{/if}}
</div>

<script src="/js/dashboard.js"></script>
