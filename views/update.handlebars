<div class="col-md-6">
    {{!-- <h3>Create a New blog:</h3> --}}

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Post Title:</label>
        <input class="form-input" type="text" id="blog-name" value="{{name}}" name="blog-name"/>
      </div>
      <div class="form-group">
        <label for="blog-desc">Content:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="button" class="btn btn-primary blog-update" data-id="{{id}}">Update</button>
      </div>
    </form>
  </div>

  <script src="/js/dashboard.js"></script>